{
    "compilerOptions": {
      "target": "es2020", // Or your desired target
      "module": "commonjs", // Or "esnext" if using es modules
      "outDir": "./dist",
      "esModuleInterop": true,
      "strict": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }